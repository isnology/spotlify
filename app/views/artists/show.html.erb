<p id="notice"><%= notice %></p>

<div class="content">
  <div class="item">
  <h1>
    <!-- <strong>Name:</strong> -->
    <%= @artist.name %>
  </h1>

  <p>
    <strong>Bio:</strong>
    <%= @artist.bio %>
  </p>

  <p>
    <strong>Genre:</strong>
    <%= @artist.genre %>
  </p>


  <h2>Songs</h2>
  <% @songs.each do |song| %>
    <p><%= link_to song.name, song, class: "#{decade(song.released_at)}" %> </p>
  <% end %>

  <%= link_to 'Edit', edit_artist_path(@artist) %> |
  <%= link_to 'Back', artists_path %>
  </div>
</div>