<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<% @songs.each do |song| %>
  <div>
    <h2><%= link_to song.name, song %></h2>
    <p><%= song.artist.name %></p>
    <p><%= song.duration %></p>
    <p><%= song.released_at %></p>
    <p>
      <%= link_to 'Edit', edit_song_path(song) %>
      <%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  </div>
<% end %>

<br>

